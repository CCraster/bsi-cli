{
  "root": true,
  "env": {
    "node": true,
    "es6": true
  },
  "extends": ["plugin:prettier/recommended"],
  "plugins": ["prettier", "node", "@typescript-eslint"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2017,
    "ecmaFeatures": {
      "legacyDecorators": true
    }
  },
  "rules": {
    "prettier/prettier": "error",
    "no-undef": "error"
  }
}
